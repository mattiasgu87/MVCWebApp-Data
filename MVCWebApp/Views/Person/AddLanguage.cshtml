@model PersonLanguage

@{ ViewData["Title"] = "Add Language to Person"; }
<h1>Add Language View</h1>

<form asp-action="AddPersonLanguage" method="post">
    <div class="form-group">
        <label asp-for="PersonId" class="control-label"></label>
        <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
    </div>
    <div class="form-group">
        <label asp-for="LanguageName" class="control-label"></label>
        <select asp-for="LanguageName" class="form-control" asp-items="ViewBag.LanguageName"></select>
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>